{% extends 'base.html.twig' %}

{% block title %}
    {{ 'account.show.title'|trans({'%name%': account.name}) }}
{% endblock %}

{% block body %}

    <br>
    <div class="container">
        <div class="mx-auto my-2">
            <table class="table table-striped table-dark">
                <tbody>
                    <tr>
                        <th>{{ 'account.index.table.name'|trans }}</th>
                        <td>{{ account.name }}</td>
                    </tr>
                    <tr>
                        <th>{{ 'account.index.table.email'|trans }}</th>
                        <td>{{ account.email }}</td>
                    </tr>
                    <tr>
                        <th>{{ 'account.index.table.nickname'|trans }}</th>
                        <td>{{ account.nickname }}</td>
                    </tr>
                    <tr>
                        <th>{{ 'account.index.table.wallet'|trans }}</th>
                        <td>{{ account.wallet }}â‚¬</td>
                    </tr>
                </tbody>
            </table>
            <div class="card-price">
                <div class="container-price">
                    <div class="price">
                        {{ 'account.index.table.total_time'|trans }} : {{ totalGameTime }}
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <h2>{{ 'account.show.games'|trans }}</h2>
            {% for lib in account.libraries %}
                {% include 'common/partials/_account_library.html.twig' with
                    {
                        'lib': lib,
                        'classCss': 'col-20 col-md-4',
                        'containerImage': 'container-image'
                    }
                %}
            {% endfor %}
        </div>
        <div class="row">
            <h2>{{ 'account.show.comments'|trans }}</h2>
            {% include 'common/partials/comment_loop.html.twig' with
                {
                    'comments': comments,
                    'classCss': 'col-lg-3 col-md-6',
                    'isHidden': false,
                    'hideAccount': true
                }
            %}
        </div>
    </div>

{% endblock %}

