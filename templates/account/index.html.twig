{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}

    <div class="container-fluid">
        <table class="table table-striped table-dark text-center table-hover">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Nickname</th>
                    <th>Email</th>
                    <th>Nb games</th>
                </tr>
            </thead>
            <tbody>
            {% if accounts|length > 0 %}
                {% for account in accounts %}
                    <tr>
                        <td>{{ account.name }}</td>
                        <td>{{ account.nickname }}</td>
                        <td>{{ account.email }}</td>
                        <td>{{ account.libraries|length }}</td>
                    </tr>
                {% endfor %}
            {% else %}
                <tr>
                    <td colspan="4">Pas de comptes</td>
                </tr>
            {% endif %}
            </tbody>
        </table>
    </div>

{% endblock %}
