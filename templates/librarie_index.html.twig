
{% extends 'base.html.twig' %}

{% block title %}
    Account de {{ account.name }}
{% endblock %}

{% block body %}

    <div class="container">
        <table class="table table-striped col-6">
            <tbody>
                <tr>
                    <th>Nom de compte</th>
                    <td>{{ account.name }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ account.email }}</td>
                </tr>
                <tr>
                    <th>Pseudo</th>
                    <td>{{ account.nickname }}</td>
                </tr>
            </tbody>
        </table>
        <table class="table table-striped">
            <thead>
            <tr>
                <th>(I)</th>
                <th>Nom</th>
                <th>Temps de jeu</th>
                <th>Dernière utilisation</th>
            </tr>
            </thead>
            <tbody>
                {% if libraries|length > 0 %}
                    {% set totalDuration = 0 %}
                    {% for library in libraries %}
                        <tr>
                            <td>{{ library.installed|game_installed }}</td>
                            <td>{{ library.game.name }}</td>
                            <td>{{ library.gameTime|sec_to_time }}</td>
                            <td>{{ library.lastUsed|date('m/d/Y') }}</td>
                        </tr>
                        {% set totalDuration = totalDuration + library.gameTime %}
                    {% endfor %}
                {% else %}
                    <tr>
                        <td colspan="4">Aucun jeu dans cette bibliothèque</td>
                    </tr>
                {% endif %}
            </tbody>
        </table>
        <div class="col-7 text-right">
            <strong>Total</strong> : {{ totalDuration|sec_to_time }}
        </div>
    </div>

{% endblock %}
