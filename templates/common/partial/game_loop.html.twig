
{% for game in games %}
    <div class="{{ classCss }}">
        <a href="{{ path('game_show', {'id': game.id}) }}">
            <div class="card">
                <div class="card-body card-game">
                    <img class="img-thumbnail w-100" src="{{ game.thumbnailCover }}">
                </div>
                <div class="card-footer">
                    {{ game.name }}
                </div>
            </div>
        </a>
    </div>
{% endfor %}